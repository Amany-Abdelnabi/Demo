@model Product

<h1 class="alert alert-info text-center">Edit Product</h1>

<div class="row">
    <form method="post" asp-controller="Products" asp-action="EditCurrent" class="col-4" enctype="multipart/form-data">
       
        <input type="hidden" asp-for="Id" />

        <div>
            <label class="label">Full Name</label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label class="label">Price</label>
            <input type="text" asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div>
            <label class="label">Description</label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div>
            <label class="label">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                <option value="">-- Select Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div>
            <label class="label">Image</label>
            <input type="file" asp-for="ImageFile" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>

            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <div class="mt-2">
                    <img src="~/Images/@Model.Image" alt="Current image" style="max-width:150px;" />
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary col-12 mt-2">Save</button>
        <a asp-controller="Products" asp-action="Getinexview" class="btn btn-secondary col-12 mt-1">Back To List</a>
    </form>
</div>
































